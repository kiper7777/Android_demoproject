<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity19"
    android:orientation="vertical"
    android:layout_marginTop="40dp">

    <!-- Вкладки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FA8F87"
            android:text="Op1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2795EB"
            android:text="Op2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2FE436"
            android:text="Op3" />

    </LinearLayout>

    <!-- Контейнер для фрагмента -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F2F6C6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:layout_gravity="center"
            android:text="WELCOME TO MY APP"
            android:textSize="26sp"
            android:textStyle="bold" />
    </FrameLayout>
</LinearLayout>
